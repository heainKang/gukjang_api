<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to "← 알람 목록으로", web_alerts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">새 알람 생성</h1>

    <% if @errors %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with url: web_alerts_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :name, "알람 이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            value: @alert[:name],
            placeholder: "예: KOSPI 하락 알림", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :index_name, "지수 선택", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :index_name, 
            options_for_select(@supported_indices.map { |idx| [idx, idx] }, @alert[:index_name]),
            { prompt: "지수를 선택하세요" },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div>
        <%= form.label :threshold_value, "임계값", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :threshold_value, 
            value: @alert[:threshold_value],
            step: 0.01,
            placeholder: "예: 3900", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500">알람이 발동될 기준 값을 입력하세요.</p>
      </div>

      <div>
        <%= form.label :condition, "조건", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :condition, 
            options_for_select([
              ['지수가 이 값 이상일 때', 'above'],
              ['지수가 이 값 이하일 때', 'below']
            ], @alert[:condition]),
            { prompt: "조건을 선택하세요" },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :is_active, 
            checked: @alert[:is_active] != false,
            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :is_active, "알람 활성화", class: "ml-2 block text-sm text-gray-900" %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "취소", web_alerts_path, 
            class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit "알람 생성", 
            class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
